<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quiz.view.CreateQuizController">
   <children>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Rounds" GridPane.rowIndex="1" />
            <Label text="Questions" GridPane.rowIndex="2" />
            <Label text="Teams" GridPane.rowIndex="3" />
            <Label text="Name" />
            <TextField fx:id="mName" GridPane.columnIndex="1" />
            <TextField fx:id="mRounds" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="mQuestions" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="mTeams" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="mPlayers" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Players" GridPane.rowIndex="4" />
         </children>
      </GridPane>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="mBack" mnemonicParsing="false" onAction="#handleBack" text="Back" />
            <Button fx:id="mCreateQuiz" mnemonicParsing="false" onAction="#handleCreateQuiz" text="Create Quiz" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
