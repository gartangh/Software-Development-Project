<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.141"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="quiz.view.NewTeamController">
	<center>
		<VBox spacing="5.0" BorderPane.alignment="CENTER">
			<children>
				<Label text="Create new team">
					<font>
						<Font size="20.0" />
					</font>
				</Label>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label text="Teamname" />
						<Label text="Color" GridPane.rowIndex="1" />
						<ColorPicker fx:id="colorpicker" prefHeight="26.0"
							prefWidth="299.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
						<TextField fx:id="newTeamname" GridPane.columnIndex="1" />
					</children>
				</GridPane>
				<ButtonBar>
					<buttons>
						<Button mnemonicParsing="false" onAction="#handleCancel"
							text="Cancel" />
						<Button mnemonicParsing="false" onAction="#handleOk" text="Ok" />
					</buttons>
				</ButtonBar>
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</VBox>
	</center>
</BorderPane>
