      			<opaqueInsets>
      				<Insets />
      			</opaqueInsets>
      			<padding>
      				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      			</padding>
      		</ButtonBar>
			</children>
			<BorderPane.margin>
				<Insets />
			</BorderPane.margin>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</VBox>
	</right>
   <left>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="quizTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="quiznameColumn" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" resizable="false" text="Quiz" />
                <TableColumn fx:id="hostnameColumn" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" resizable="false" text="Host" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <ButtonBar>
              <buttons>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleCreateQuiz" text="Create quiz" />
                  <Button cancelButton="true" mnemonicParsing="false" onAction="#handleBack" text="Back" />
              </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
